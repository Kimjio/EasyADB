<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.geometry.Insets?>
<StackPane fx:id="root" prefHeight="352.0" prefWidth="358.0" xmlns="http://javafx.com/javafx/8.0.121"
           xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="deviceConnected" text="연결됨" StackPane.alignment="BOTTOM_RIGHT"/>
    <Label fx:id="rootState" text="ROOT: NO" StackPane.alignment="BOTTOM_RIGHT">
        <StackPane.margin>
            <Insets>
                <bottom>15</bottom>
            </Insets>
        </StackPane.margin>
    </Label>
    <!-- Header -->
    <GridPane alignment="CENTER" hgap="15.0" vgap="10.0">
        <JFXButton fx:id="logcatButton" buttonType="RAISED" prefHeight="40" prefWidth="100"
                   style="-fx-font-size:14px;-fx-background-color:WHITE;" text="Logcat" GridPane.columnIndex="0"
                   GridPane.rowIndex="0"/>
        <JFXButton fx:id="apkButton" buttonType="RAISED" prefHeight="40" prefWidth="100"
                   style="-fx-font-size:14px;-fx-background-color:WHITE;" text="APK 설치" GridPane.columnIndex="1"
                   GridPane.rowIndex="0"/>
        <JFXButton fx:id="rootButton" buttonType="RAISED" prefHeight="40" prefWidth="100"
                   style="-fx-font-size:14px;-fx-background-color:WHITE;" text="루트 권한" GridPane.columnIndex="0"
                   GridPane.rowIndex="1"/>
        <JFXButton fx:id="powerButton" buttonType="RAISED" prefHeight="40" prefWidth="100"
                   style="-fx-font-size:14px;-fx-background-color:WHITE;" text="전원" GridPane.columnIndex="1"
                   GridPane.rowIndex="1"/>
    </GridPane>
    <JFXButton fx:id="about" buttonType="FLAT" ripplerFill="#0000004d"
               style="-fx-graphic: url('/drawable/ic_info_outline_black.png')" StackPane.alignment="BOTTOM_LEFT"/>
    <Label fx:id="userName" text="Hello, USER" StackPane.alignment="TOP_RIGHT"/>
</StackPane>
